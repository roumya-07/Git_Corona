
@{
    ViewData["Title"] = "Forgot Password";
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#btn_forgot").click(function () {
            if (txtChkValidation('txtUserID') == true) {
                var login = {
                    UserID: $("#txtUserID").val(),

                };
                $.getJSON("/User/UserForgotPwd", login, function (data) {

                    data = JSON.parse(data);
                    // alert(data.UserID);
                    if (data == 1) {
                        alert("Please check your Email");
                    } else {
                        alert("Enter Correct UserID");
                    }
                });
            }
        });
    });

</script>
<div id="divTag">
    <table id="tbl" class="table table-bordered table-striped">
        <tr>
            <td align="justify">
                @Html.Partial("View")


            </td>
            <td>
                <table class="table  table-striped">
                    <tr>
                        <th colspan="2" align="justify">
                            Forgot Password
                        </th>
                    </tr>
                    <tr>
                        <th align="right">Enter User ID</th>
                        <td>
                            <input id="txtUserID" type="text" class="form-control" placeholder="Enter User ID" required onkeypress="txtChkValidation('txtUserID')" />
                        </td>

                    </tr>


                    <tr>
                        <td colspan="2" align="right">
                            <input type="button" id="btn_forgot" value="Send" />
                        </td>
                    </tr>
                </table>

            </td>
        </tr>
    </table>

</div>